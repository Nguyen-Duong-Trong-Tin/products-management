extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/box-alert.pug
include ../../mixins/go-back.pug

block main
  +box-alert-error(messages)

  +box-head("Edit A Product Category")

  +go-back()

  form(
    method="POST"
    action=`${prefixAdmin}/products-category/edit/${record.id}?_method=PATCH`
    enctype="multipart/form-data"
  )
    .item.form-group
      label Title
      input(
        class="form-control"
        name="title"
        required
        value=record.title
      )
    .item.form-group
      label Parent Category
      input(
        class="form-control"
        name="parent_id"
        value=record.parent_id
      )
    .item.form-group
      label Description
      textarea(
        class="form-control tinyMCE"
        name="description"
        value=record.description
      )
    div(
      class="item form-group"
      upload-image
    )
      label Thumbnail
      input(
        class="form-control"
        type="file"
        name="thumbnail"
        accept="image/*"
        upload-image-input
      )
      .inner-img
        img(
          upload-image-preview
          src=record.thumbnail
        )
        button(
          type="button"
          class="btn btn-danger"
          button-close-image
        ) x
    .item.form-group
      label Position
      input(
        class="form-control"
        type="number"
        name="position"
        placeholder="Auto Descending"
        value=record.position
      )
    .item.form-group
      p Status
      input(
        type="radio"
        name="status"
        value="active"
        class="form-check-input"
        checked = record.status === "active"
      )
      label.form-check-label Active
      input(
        type="radio"
        name="status"
        value="inactive"
        class="form-check-input"
        checked = record.status === "inactive"
      )
      label.form-check-label Inactive
    .item.form-group
      button(
        type="submit"
        class="btn btn-primary"
      ) Update